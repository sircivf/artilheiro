<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
	<!-- insert your AIML categories here -->
	
	
	<category>
	    <pattern>OLA</pattern>
	    <template>Fala ai sem futuro, Meu nome é <bot name="name"/> e o seu?</template>
	</category>
	
	<category>
	    <pattern>MEU NOME E *</pattern>
	    <template>Satisfação te conhecer <set name="nomeC"><star/></set></template>
	</category>
	
	<category>
	   <pattern>BORA COMEÇAR</pattern>
	   <template>Bora! O que você quer saber sobre futebol?</template>
	</category>
	
	<category>
	    <pattern>QUAL SEU NOME</pattern>
	    <template>Meu Nome é <bot name="name"/></template>
	</category>
	
	<category>
	    <pattern>QUAL A SUA IDADE</pattern>
	    <template>Tenho <bot name="idade"/> anos</template>
	</category>
	
	<category>
	    <pattern>PRA QUAL TIME VOCÊ TORCE</pattern>
	    <template>Torço pro <bot name="time"/> e voce?</template>
	</category>
	
	<category>
	    <that>TORÇO PRO * E VOCE</that>
	    <pattern>*</pattern>
	    <template><think><set name="timeC"><star/></set></think>
	    <condition name="timeC">
	        <li value="goias"><br/>Então você é moxezinho</li>
	        <li value="vila nova"><br/>Fala panetone</li>
	        <li value="atletico goianiense"><br/>Vai pra cima deles Dragão!!</li>
	        <li value="flamengo"><br/>Faz parte da maior torcida do Brasil</li>
	        <li value="corinthians"><br/>Mais do bando de loucos!</li>
	        <li value="sao paulo"><br/>Eai Bambi</li>
	        <li value="palmeiras"><br/>não tem copinha nem mundial!</li>
	        <li>Não conheço.</li>
	    </condition>
	    
	        
	    </template>
	</category>
	
	
</aiml>